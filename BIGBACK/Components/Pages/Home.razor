@page "/"

<PageTitle>Home</PageTitle>

<!-- Main Container -->
<div class="home-container">
    <!-- Search Bar (Top Left) -->
    <div class="search-container">
        <input type="text" class="search-input" placeholder="Enter delivery address" @bind="SearchQuery">
        <button class="search-btn" @onclick="PerformSearch">🔍</button>
    </div>

    <div class="text-container">
        <h1>Welcome to BigBack</h1>
        <p>Your go-to platform for connecting with local businesses.</p>
        <div>
            <a href="/businesses" class="btn btn-primary"> Shop  Now</a>
        </div>
    </div>

    <!-- Logo or Banner Image -->
    <div class="logo-container">
        <img src="images/CoverPage.jpg" alt="BigBack Logo" class="logo-img">
    </div>
</div>

<!-- "How It Works" Section -->
<div class="how-it-works">
    <hr class="custom-hr">
    <h2 class="how-it-works-title">How It Works</h2>
    <hr class="custom-hr">

    <div class="steps-container">
        <div class="step-card">
            <h3>Step 1</h3>
            <p>Browse local businesses and find your favorite food.</p>
        </div>
        <div class="step-card">
            <h3>Step 2</h3>
            <p>Place an order and choose your delivery preferences.</p>
        </div>
        <div class="step-card">
            <h3>Step 3</h3>
            <p>Enjoy your meal delivered right to your doorstep!</p>
        </div>
    </div>
</div>

<!-- "Work with BigBack" Section -->
<div class="work-with-bigback">
    <hr class="custom-hr">
    <h2 class="work-title">Work with BigBack</h2>
    <hr class="custom-hr">

    <!-- Delivery Rider Section -->
    <div class="work-item">
        <img src="images/deliveryRider.jpg" alt="Delivery Rider" class="work-img">
        <div class="work-text">
            <h5>All you need is a bike, and you can start earning money by delivering food from different stores</h5>
            <p>Join our delivery team today and make money on your schedule!</p>
        </div>
    </div>

    <hr class="custom-hr">

    <!-- Small Business Support Section -->
    <div class="work-item">
        <img src="images/restaurantlogo.jpg" alt="Restaurant Logo" class="work-img">
        <div class="work-text">
            <h5>BigBack helps small businesses grow</h5>
            <p>Partner with us today!</p>
        </div>
    </div>

    <hr class="custom-hr">

    <!-- Small Business Support Section -->
    <div class="work-item">
        <img src="images/admin.jpg" alt="Restaurant Logo" class="work-img">
        <div class="work-text">
            <h5>Be part of our team and build a top-notch delivery service with us</h5>
            <p>Partner with us today!</p>
        </div>
    </div>
    <hr class="custom-hr">

    <footer class="text-center mt-4 p-3 bg-light">
        <p>© 2025 BIGBACK. All Rights Reserved.</p>
    </footer>
</div>

<!-- Styles -->
