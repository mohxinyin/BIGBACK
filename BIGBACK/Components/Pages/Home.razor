        width: 250px;
        font-size: 16px;
    }

    .search-btn {
        padding: 8px 12px;
        margin-left: 5px;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        color: white;
        font-size: 16px;
        cursor: pointer;
