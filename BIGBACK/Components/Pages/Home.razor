@page "/"

<PageTitle>Home</PageTitle>

<!-- Main Container -->
<div class="home-container">
    <!-- Search Bar (Top Left) -->
    <div class="search-container">
        <input type="text" class="search-input" placeholder="Enter delivery address" @bind="SearchQuery">
        <button class="search-btn" @onclick="PerformSearch">🔍</button>
    </div>

    <div class="text-container">
        <h1>Welcome to BigBack</h1>
        <p>Your go-to platform for connecting with local businesses.</p>
    </div>

    <!-- Logo or Banner Image -->
    <div class="logo-container">
        <img src="images/CoverPage.jpg" alt="BigBack Logo" class="logo-img">
    </div>
</div>

<!-- Styles -->
<style>
    .home-container {
        padding: 20px;
        position: relative;
    }

    /* Search Bar (Top Left) */
    .search-container {
        position: relative;
        top: 5px;
        text-align: left;
        display: flex;
        align-items: center;
    }

    .search-input {
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        outline: none;
        width: 250px;
        font-size: 16px;
    }

    .search-btn {
        padding: 8px 12px;
        margin-left: 5px;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        color: white;
        font-size: 16px;
        cursor: pointer;
    }

    .search-btn:hover {
       background-color: #0056b3;
    }

    .text-container {
        flex: 1;
        text-align: left;
        margin-top: 30px;
    }

    .logo-container {
        position: absolute; /* Allow for manual positioning */
        top: 30px; /* Move the logo upwards */
        right: 50px;
        text-align: right;
    }

    .logo-img {
        width:700px;
        height: 300px;
        border-radius: 15px; /* Rounded edges for the image */
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.2rem;
        color: #555;
    }
</style>

@code {
    private string SearchQuery { get; set; } = "";

    private void PerformSearch()
    {
        Console.WriteLine($"Searching for: {SearchQuery}");
        // Implement search functionality here
    }
}