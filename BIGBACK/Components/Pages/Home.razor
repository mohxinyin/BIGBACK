        }

    /* Work with BigBack Section */
    .work-with-bigback {
        text-align: center;
        margin-top: 60px;
    }

    .work-title {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin: 10px 0;
    }

    .custom-hr {
        width: 80%;
        border: 1px solid #ddd;
        margin: 20px auto;
    }

    /* Work Item (Each Section) */
    .work-item {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
        margin-top: 30px;
        text-align: left;
    }

    /* Work Images */
    .work-img {
        width: 150px;
        height: auto;
        border-radius: 10px;
    }

    /* Work Text */
    .work-text {
        max-width: 600px;
    }

        .work-text h5 {
            font-size: 1.8rem;
            color: black;
        }

        .work-text p {
            font-size: 1.2rem;
            color: #555;
        }

